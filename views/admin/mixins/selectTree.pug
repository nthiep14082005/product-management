mixin selectTree(arrayRecord , parentIdLevel = 1)
    each item in arrayRecord 
        - const prefix = Array(parentIdLevel + 1).join("-- ")
        option(value=item.id) #{prefix}#{item.title}
            if item.newChildren && item.newChildren.length > 0
                +selectTree(item.newChildren, parentIdLevel + 1)
