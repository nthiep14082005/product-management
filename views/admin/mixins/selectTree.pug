//- Sử dụng đúng thuộc tính newChildren để đệ quy
mixin selectTree(arrayRecord, parentIdLevel = 1, parent_iddd = "")
    each item in arrayRecord
        - const prefix = Array(parentIdLevel + 1).join("-- ")
        option(
            value=item.id
            selected= item.id == parent_iddd ? true : false
        ) #{prefix}#{item.title}
        if item.newChildren && item.newChildren.length > 0
            +selectTree(item.newChildren, parentIdLevel + 1, parent_iddd)


















