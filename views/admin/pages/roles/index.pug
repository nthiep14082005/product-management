extends ../../layouts/default.pug

block bien 
    h1(class="mb-4") Nhóm quyền

    .card.mb-3 
        .card-header Danh sách
        .card-body
            .row
                .col-8 
                .col-4.text-right
                    if(roleAdmin.permissions.includes("roles_create"))
                        a(
                            href=`${prefixAdmin}/roles/create`
                            class="btn btn-outline-success"
                        ) + Thêm mới
            table(
                class="table table-hover table-sm"
            )
                thead 
                    tr  
                        th STT 
                        th Nhóm quyền
                        th Mô tả ngắn
                        th Hành động
                tbody
                    if(record.length > 0)
                        each item, index in record 
                            tr 
                                td #{index + 1}
                                td #{item.title}
                                td #{item.description}
                                td 
                                    
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/roles/details/${item.id}`
                                    ) Chi tiết
                                    if(roleAdmin.permissions.includes("roles_edit"))
                                        a(
                                            class="btn btn-warning btn-sm ml-1"
                                            href=`${prefixAdmin}/roles/edit/${item.id}`
                                        ) Sửa
                                    else 
                                        span(
                                            class="btn btn-warning btn-sm ml-1"
                                        ) Sửa
                                    if(roleAdmin.permissions.includes("roles_delete"))
                                        a(
                                            class="btn btn-danger btn-sm ml-1"
                                            href=`${prefixAdmin}/roles/delete/${item.id}`
                                        ) Xóa
                                    else 
                                        span(
                                            class="btn btn-danger btn-sm ml-1"
                                        ) Xóa
                    else 
                        tr 
                            td(colspan="4" class="text-center") Chưa có nhóm quyền nào được chọn
