extends ../../layouts/default.pug
include ../../mixins/form-alert.pug

block bien 
    h1(class="mb-4") Thêm mới tài khoản 
    +alert-error(5000)
    //- div() #{role}

    form(
        action=`${prefixAdmin}/accounts/create`
        method="POST"
        exctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
            )
        div(class="form-group")
            label(for="email") Email * 
            input(
                type="email" 
                class="form-control"
                id="email"
                name="email"
                required
            )
        div(class="form-group")
            label(for="password") Mật khẩu * 
                //- khi để type là password thì trên giao diện tự động ẩn mật khẩu 
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required 
            )
        div(class="form-group")
            label(for="phone") Số điện thoại 
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                required 
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            label(for="role_id") Phân quyền
            select(name="role_id" id="role-id" class="form-control")
                option(disabled) -- Chọn --
                each item in role 
                    option(value=item.id) #{item.title} 
                        //- cần phải để value = item.id để khi submit thì bên body controller nhận được thuộc tính có id="role_id:'item.id'" của role đó
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới